      <td>
        <input type="text" name="organization" required/>
      </td>
    </tr>
      <tr>
        <td>Contact Phone Number</td>
        <td>
          <input type="number" name="phoneNumber" placeholder="10 digits" onfocusout="validation()" required />
        </td>
      </tr>
      <tr>
      <tr>
        <td>Payment</td>
        <td>
          <input type="number" name="payment" required />
        </td>
      </tr>
      <tr>
        <td colspan="2">
          <button id="createButton"><a href="https://shielded-journey-79042.herokuapp.com/users">Create Booking</a></button>
