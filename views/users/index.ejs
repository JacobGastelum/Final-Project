<!DOCTYPE html>
<html>
<head>
  <title>Booking List</title>
  <link rel="shortcut icon" type="image/x-icon" href="https://static1.squarespace.com/static/5963ba91b11be18da82fb780/t/5a84fcdcec212d9c3300e7dc/favicon.ico">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
    crossorigin="anonymous"></script>
  <script type="text/javascript" src="/javascripts/delete_user.js"></script>
</head>

<body id="greenBackground">
  <div class="container">
    <h3>
      <a href="/users/user">Create New Booking</a>
    </h3>
    <h1>Booking List</h1>
    <% if(users.length>0) { %>
      <table>
        <thead id="banner">
          <tr>
            <th>Contact Name</th>
            <th>Organization</th>
            <th>Payment</th>
            <th>Contact Phone #</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i<users.length;i++) { %>
            <tr>
              <td>
                <%= users[i].name%>
              </td>
              <td>
                <%= users[i].organization%>
              </td>
              <td>
               $ <%= users[i].payment%>
              </td>
              <td>
                <%= users[i].phoneNumber%>
              </td>
              <td>
                  <button>
                    <a href="/users/details/<%= users[i]._id%>">
                    Details
                  </a></button>
  
                </td>
              
              <td>
                <button>
                  <a href="/users/user/<%= users[i]._id%>">
                  Edit
                </a></button>

              </td>
              <td>
                <button class="deleteButton" data-uid="<%= users[i]._id%>">
                  Delete
                </button>
              </td>
            </tr>
            <% } %>
        </tbody>
      </table>
      <% } else { %>
        <div>No Bookings found.</div>
        <% } %>
  </div>
</body>

</html>